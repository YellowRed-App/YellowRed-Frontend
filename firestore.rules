service cloud.firestore {
  match /databases/{database}/documents {
    
    match /mail/{document=**} {
      allow write: if request.auth != null;
    }

    match /users/{userId} {
      allow read, write: if request.auth != null;
      
      match /{subcollections}/{document=**} {
        allow read, write: if request.auth != null;
      }
    }
  }
}
